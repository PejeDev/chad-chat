import axios, { AxiosInstance, AxiosRequestConfig, AxiosResponse } from 'axios';
import type { Pet, Food, CreatePetInput } from '../definitions/types';

export class {{pascalCase name}}Client {
  private client: AxiosInstance;

  constructor(baseURL: string, config?: AxiosRequestConfig) {
    this.client = axios.create({ baseURL, ...config });
  }

  async getPets(): Promise<AxiosResponse<Pet[]>> {
    return this.client.get<Pet[]>('/pets');
  }

  async postPet(data: CreatePetInput): Promise<AxiosResponse<Pet>> {
    return this.client.post<Pet>('/pets', data);
  }

  async deleteFoods(): Promise<AxiosResponse<Food[]>> {
    return this.client.delete<Food[]>('/foods');
  }
}

export default {{pascalCase name}}Client; 