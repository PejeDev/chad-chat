{
  "extends": "@chad-chat/typescript-config/react-library.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "lib": ["ESNext", "DOM"],
    "baseUrl": ".",
    "paths": {
      "@chad-chat/ui/*": ["./src/*"],
      "@/hooks": ["./src/hooks/*"],
      "@/lib": ["./src/lib/*"],
      "@/components": ["./src/components/*"]
    }
  },
  "include": ["."],
  "exclude": ["node_modules", "dist"]
}
