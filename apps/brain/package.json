{
  "name": "@chad-chat/brain",
  "module": "src/index.ts",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "bun run db:migrate && bun --watch src/index.ts",
    "build": "bun build src/index.ts --target bun --outdir ./dist",
    "start": "NODE_ENV=production bun dist/index.js",
    "test": "bun test",
    "db:migrate": "bun run --env-file=.env --filter @chad-chat/brain-repository db:migrate"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "typescript": "^5",
    "@chad-chat/typescript-config": "workspace:*"
  },
  "dependencies": {
    "@chad-chat/logger": "workspace:*",
    "@elysiajs/cors": "^1.3.3",
    "@trpc/client": "^11.3.1",
    "@trpc/server": "^11.3.1",
    "elysia": "^1.3.4",
    "zod": "^3.25.62",
    "@elysiajs/swagger": "^1.3.0"
  }
}
